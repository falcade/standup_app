<header class="main-header">

  <!-- Logo -->
  <%= link_to root_path, class: "logo" do %>
    <!-- mini logo for sidebar mini 50x50 pixels -->
    <span class="logo-mini"><b>A</b>LT</span>
    <!-- logo for regular state and mobile devices -->
    <span class="logo-lg"><b>Admin</b>LTE</span>
  <% end %>

  <!-- Header Navbar -->
  <nav class="navbar navbar-static-top" role="navigation">
    <!-- Sidebar toggle button-->
    <%= link_to "#", class: "sidebar-toggle", data: { toggle: "push-menu" }, role: "button" do %>
      <span class="sr-only">Toggle navigation</span>
    <% end %>

    <!-- Navbar Right Menu -->
    <div class="navbar-custom-menu">
      <ul class="nav navbar-nav">
        <!-- Messages: style can be found in dropdown.less-->
        <li class="dropdown messages-menu">
          <!-- Menu toggle button -->
          <%= link_to "#", class: "dropdown-toggle", data: { toggle: "dropdown" } do %>
            <%= icon "envelope-o" %>
            <span class="label label-success">4</span>
          <% end %>
          <ul class="dropdown-menu">
            <li class="header">You have 4 messages</li>
            <li>
              <!-- inner menu: contains the messages -->
              <ul class="menu">
                <li><!-- start message -->
                  <%= link_to "#" do %>
                    <div class="pull-left">
                      <!-- User Image -->
                      <%= image_tag "user2-160x160.jpg", class: "img-circle", alt: "User Image" %>
                    </div>
                    <!-- Message title and timestamp -->
                    <h4>
                      Support Team
                      <small>
                        <%= icon "clock-o", "5 mins" %>
                      </small>
                    </h4>
                    <!-- The message -->
                    <p>Why not buy a new awesome theme?</p>
                  <% end %>
                </li>
                <!-- end message -->
              </ul>
              <!-- /.menu -->
            </li>
            <li class="footer">
              <%= link_to "See All Messages", "#" %>
            </li>
          </ul>
        </li>
        <!-- /.messages-menu -->

        <!-- Notifications Menu -->
        <li class="dropdown notifications-menu">
          <!-- Menu toggle button -->
          <%= link_to "#", class: "dropdown-toggle", data: { toggle: "dropdown" } do %>
            <%= icon "bell-o" %>
            <span class="label label-warning">10</span>
          <% end %>
          <ul class="dropdown-menu">
            <li class="header">You have 10 notifications</li>
            <li>
              <!-- Inner Menu: contains the notifications -->
              <ul class="menu">
                <li><!-- start notification -->
                  <%= link_to "#" do %>
                    <%= icon "users text-aqua", "5 new members joined today" %>
                  <% end %>
                  <%= link_to "#" do %>
                  <% end %>
                  <a href="#">
                  </a>
                </li>
                <!-- end notification -->
              </ul>
            </li>
            <li class="footer">
              <%= link_to "View all", "#" %>
            </li>
          </ul>
        </li>
        <!-- Tasks Menu -->
        <li class="dropdown tasks-menu">
          <!-- Menu Toggle Button -->
          <%= link_to "#", class: "dropdown-toggle", data: { toggle: "dropdown" } do %>
            <%= icon "flag-o" %>
            <span class="label label-danger">9</span>
          <% end %>
          <ul class="dropdown-menu">
            <li class="header">You have 9 tasks</li>
            <li>
              <!-- Inner menu: contains the tasks -->
              <ul class="menu">
                <li><!-- Task item -->
                  <%= link_to "#" do %>
                    <!-- Task title and progress text -->
                    <h3>
                      Design some buttons
                      <small class="pull-right">20%</small>
                    </h3>
                    <!-- The progress bar -->
                    <div class="progress xs">
                      <!-- Change the css width attribute to simulate progress -->
                      <div class="progress-bar progress-bar-aqua" style="width: 20%" role="progressbar"
                           aria-valuenow="20" aria-valuemin="0" aria-valuemax="100">
                        <span class="sr-only">20% Complete</span>
                      </div>
                    </div>
                  <% end %>
                </li>
                <!-- end task item -->
              </ul>
            </li>
            <li class="footer">
              <%= link_to "View all tasks", "#" %>
            </li>
          </ul>
        </li>
        <!-- User Account Menu -->
        <li class="dropdown user user-menu">
          <!-- Menu Toggle Button -->
          <%= link_to "#", class: "dropdown-toggle", data: { toggle: "dropdown" } do %>
            <!-- The user image in the navbar-->
            <%= image_tag "user2-160x160.jpg", class: "user-image", alt: "User Image" %>
            <!-- hidden-xs hides the username on small devices so only the image appears. -->
            <span class="hidden-xs">Alexander Pierce</span>
          <% end %>
          <ul class="dropdown-menu">
            <!-- The user image in the menu -->
            <li class="user-header">
              <%= image_tag "user2-160x160.jpg", class: "img-circle", alt: "User Image" %>
              <p>
                Alexander Pierce - Web Developer
                <small>Member since Nov. 2012</small>
              </p>
            </li>
            <!-- Menu Body -->
            <li class="user-body">
              <div class="row">
                <div class="col-xs-4 text-center">
                  <%= link_to "Followers", "#" %>
                </div>
                <div class="col-xs-4 text-center">
                  <%= link_to "Sales", "#" %>
                </div>
                <div class="col-xs-4 text-center">
                  <%= link_to "Friends", "#" %>
                </div>
              </div>
              <!-- /.row -->
            </li>
            <!-- Menu Footer-->
            <li class="user-footer">
              <div class="pull-left">
                <%= link_to "Profile", "#", class: "btn btn-default btn-flat" %>
              </div>
              <div class="pull-right">
                <%= link_to "Sign out", "#", class: "btn btn-default btn-flat" %>
              </div>
            </li>
          </ul>
        </li>
        <!-- Control Sidebar Toggle Button -->
        <li>
          <%= link_to "#", data: { toggle: "control-sidebar" } do %>
            <%= icon "gears" %>
          <% end %>
        </li>
      </ul>
    </div>
  </nav>
</header>
